
{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "outDir": "./dist",                       
    "rootDir": "./",                   
    "strict": true,                           
    "esModuleInterop": true,                  
    "experimentalDecorators": true, 
    "moduleResolution": "node",      
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true  
  },
  "include": [
    "./*.ts",
    "./*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
